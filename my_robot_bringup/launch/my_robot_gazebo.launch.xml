<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro" />
    <let name="gazebo_config_path" 
         value="$(find-pkg-share my_robot_bringup)/config/gazebo_bridge.yaml" />  
    <!-- <let name="controller_manager_path" 
         value="$(find-pkg-share my_robot_bringup)/config/controller_manager.yaml" /> 
    <let name="diff_cont_path" 
         value="$(find-pkg-share my_robot_bringup)/config/diff_cont.yaml" />  -->
    <let name="rviz_path" 
         value="$(find-pkg-share my_robot_description)/rviz/urdf_config.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'xacro $(var urdf_path)')" />  
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(find-pkg-share my_robot_bringup)/worlds/test_world.sdf -r" />
        <!-- <arg name="gz_args" value="empty.sdf" /> -->
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description" />

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)" />
    </node>
    
    <!-- <node pkg="controller_manager" exec="spawner" name="controller_manager">
        <param value="$(var controller_manager_path)"/>
    </node>
    <node pkg="controller_manager" exec="spawner" name="diff_cont">
        <param value="$(var diff_cont_path)"/>
    </node> -->

    
    <!-- spawn diff_drive_controller -->
    <!-- <node pkg="controller_manager" exec="spawner.py" output="screen"
          args="diff_cont" /> -->
          
    <!-- spawn joint state broadcaster -->
    <!-- <node pkg="controller_manager" exec="spawner" output="screen"
          args="joint_broad" /> -->

    <node pkg="rviz2" exec="rviz2" args="-d $(var rviz_path)" output="screen" />

</launch>